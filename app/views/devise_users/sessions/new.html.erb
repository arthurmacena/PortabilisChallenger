<div class="card">
  <div class="card-body">
    <div class="login-box-body">
      <p class="login-box-msg">Fa√ßa o login para acessar o sistema</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group has-feedback">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail', class: 'form-control' %>
          <!-- <input type="email" class="form-control" placeholder="Email"> -->
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Senha', class: 'form-control' %>
          <!-- <input type="password" class="form-control" placeholder="Password"> -->
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
          <% if devise_mapping.rememberable? -%>
            <div class="col-xs-8">
              <div class="checkbox icheck">
                <label>
                  <%= f.check_box :remember_me %>&nbsp;&nbsp;&nbsp;Lembrar de mim?
                  <!-- <input type="checkbox"> Remember Me -->
                </label>
              </div>
            </div>
          <% end %>
          <!-- /.col -->
          <div class="col-xs-4">
            <%= f.submit "Entrar", class:'btn btn-primary btn-block btn-flat' %>
            <!-- <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button> -->
          </div>
          <!-- /.col -->
        </div>
      <% end %>
      <%= render "devise_users/shared/links" %>
    </div>
    <!-- /.login-box-body -->
  </div>
</div>
